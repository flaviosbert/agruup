extends layout

block content
  h1= title  
  
  div#initialContent
    = appData
  
  div.app
  div.edicao
  
  script(id="concursoTemplate", type="text/x-handlebars")
    <a href="#" class="nomeConcurso">{{nome}}</a>
  
  script(id="footerTemplate", type="text/x-handlebars")
    p
      <a href="#" class="addConcurso">Inserir Concurso</a>
      
    
  script(id="exibirConcursoTemplate", type="text/x-handlebars")    
    <h2>Nome do Concurso: {{nome}}</h2>
    <p>Mais info do concurso</p>    
    
  script(id="editarConcursoTemplate", type="text/x-handlebars")
    p Nome do concurso:
      input(type="text", name="nome", value="{{nome}}")
    p Descri&ccedil;&atilde;o:
      input(type="text", name="descricao", value="{{descricao}}")
    p Sal&aacute;rio:
      input(type="text", name="salario", value="{{salario}}")
    p
      <a href=# class="gravarConcurso">Gravar</a>
    p 
      <a href=# class="removerConcurso">Remover</a>
    
    
    
  